<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>Shrt.URL</title>
  </head>
  <body>
    <div class="container">
      <h1>Shrt.URL</h1>
      <div class="form-group col">
        <form action="/api/convert" method="POST" class="my-4 form-inline">
          <div class="row">
            <div class="col">
              <label for="fullUrl" class="visually-hidden">URL</label>
              <input
                required
                placeholder="URL"
                type="url"
                name="fullUrl"
                id="fullUrl"
                class="form-control col-9"
              />
            </div>
            <div class="col">
              <button class="btn btn-success" type="submit">Shorten</button>
            </div>
          </div>
        </form>
      </div>
      <div class="table-responsive">
        <table class="table table-hover table-success table-striped">
          <thead>
            <tr>
              <th>Full URL</th>
              <th>Short URL</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <td>
              <a target="_blank" href="<%= shortUrl.fullUrl %>"
                ><%= shortUrl.fullUrl %></a
              >
            </td>
            <td>
              <a target="_blank" href="<%= shortUrl.shortUrl %>"
                ><%= shortUrl.shortUrl %></a
              >
            </td>
            <td><%= shortUrl.clicks %></td>
            <tr></tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
